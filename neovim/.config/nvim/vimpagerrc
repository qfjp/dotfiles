let g:no_man_maps=1
let g:easycomplete_lsp_checking=0
let g:easycomplete_diagnostics_enable=0

set laststatus=0
set scrolloff=0
set nolist
set nocursorline
set noexpandtab
set nosmarttab
set tabstop=4
set shiftwidth=4
if exists('+colorcolumn')
  set cc=0
endif

set foldcolumn=0

"set nowrap
set linebreak

call AnsiEsc#AnsiEsc(0)

set nonumber
set norelativenumber

noh " Start without highlights

let mapleader="<c-a>"
let maplocalleader="<c-a>"
map q :q!<CR>
map <SPACE> <C-D>
map b <C-U>

map j <c-e>
map k <c-y>

if exists(":QuickScopeToggle")
    let b:qs_local_disable=1
endif
